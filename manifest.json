{
  "manifest_version": 2,

  "name": "facebook extension",
  "version": "1.0",

  "background": {
		"scripts": ["background.js"]
   },

   "content_scripts" : [
		{
			"matches": ["*://www.facebook.com/*"],
   			"js": ["main.js"],
			"css": [
				"box.css"
			],
            "run_at": "document_start" 		  
   		}
   ],

  "permissions": [    
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://*.facebook.com/",
	"tabs"  
  ],

	"web_accessible_resources": [
		"box.html"		
	  ]

}
